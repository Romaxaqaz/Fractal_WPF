<Window x:Class="ShutOffLines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShutOffLines"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="MainDrawCanvas" MouseDown="MainDrawCanvas_MouseDown" Background="Honeydew" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Button Content="Clear" Grid.Column="1" Click="Button_Click"/>

    </Grid>
</Window>
